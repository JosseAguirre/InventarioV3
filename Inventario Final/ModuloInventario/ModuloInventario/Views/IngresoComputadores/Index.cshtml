@model ModuloInventario.ViewModels.IndexViewModel

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Ingreso de Computadores</h2>
<link rel="stylesheet" href="../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<p>
    <a href="/Home/SeleccionIngreso" class="btn btn-outline-primary btn-sm"><i class="fas fa-undo-alt fa-1x"></i> Regresar</a> |
    @Html.ActionLink("Ingresar", "Create")
</p>
<table class="table table-responsive table-striped table-bordered ">
    <thead class="thead-dark">
        <tr>
            <th>
                Responsable
            </th>
            <th>
                Ubicación_Origen
            </th>
            <th>
                Código_Interno
            </th>
            <th>
                Artículo
            </th>
            <th>
                Memoria_RAM
            </th>
            <th>
                Procesador
            </th>
            <th>
                DiscoDuro
            </th>
            <th>
                Licenciado
            </th>
            <th>
                Office
            </th>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th>
                Serie
            </th>
            <th>
                Particularidad
            </th>
            <th>
                Estado
            </th>
            <th>
                Nº_Factura
            </th>
            <th>
                Valor_Factura
            </th>
            <th>
                Fecha_Adquisición
            </th>
            <th>
                Observaciones
            </th>
            <th>................Opciones................</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ingresoComputador)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PERSONA.NOMBRE1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEDE.DESCRIPCION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CODIGOINTERNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ARTICULO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MEMORIARAM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PROCESADOR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DISCODURO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LICENCIADO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OFFICE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MARCA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MODELO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERIE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PARTICULARIDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ESTADO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NODEFACTURA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VALORFACTURA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHAADQUISICION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OBSERVACIONES)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.SECUENCIAL })
                </td>
            </tr>
        }
    </tbody>
</table>

@{Html.RenderPartial("_paginador", Model);}