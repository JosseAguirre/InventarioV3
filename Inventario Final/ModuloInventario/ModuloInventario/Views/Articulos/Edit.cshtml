@model ModuloInventario.Models.ARTICULO

@{
    ViewBag.Title = "Edit";
}
<p></p>
<link rel="stylesheet" href="../../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Editar Registro</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5>Catálogo de Artículos</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SECUENCIAL)

        <div class="form-group">
            @Html.LabelFor(model => model.ARTICULO1, htmlAttributes: new { @class = "control-label col-md-2", id = "Articulo" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-ellipsis-h"></i></span>
                    @Html.EditorFor(model => model.ARTICULO1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ARTICULO1, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CATEGORIAARTICULO, htmlAttributes: new { @class = "control-label col-md-2", id = "Categoria" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-bookmark"></i></span>
                    @Html.EditorFor(model => model.CATEGORIAARTICULO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CATEGORIAARTICULO, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-outline-warning"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $('#Articulo').text('Art\u00EDculo');
    $('#Categoria').text('Categor\u00EDa del Art\u00EDculo')
</script>