@model ModuloInventario.Models.ARTICULO

@{
    ViewBag.Title = "Delete";
}
<p></p>
<link rel="stylesheet" href="../../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Eliminar Registro</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<h4>Estas seguro de eliminar?</h4>
<div>
    <h5>Catálogo de Artículos</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt id="Articulo">
            @Html.DisplayNameFor(model => model.ARTICULO1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ARTICULO1)
        </dd>

        <dt id="Categoria">
            @Html.DisplayNameFor(model => model.CATEGORIAARTICULO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORIAARTICULO)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" value="Delete" class="btn btn-outline-danger"><i class="fas fa-times-circle"></i> Eliminar</button> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>
<script>
    $('#Articulo').text('Art\u00EDculo');
    $('#Categoria').text('Categor\u00EDa del Art\u00EDculo')
</script>