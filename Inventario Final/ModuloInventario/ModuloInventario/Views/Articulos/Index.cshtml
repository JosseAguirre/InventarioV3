@model IEnumerable<ModuloInventario.Models.ARTICULO>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<p></p>
<h3>Catálogo de Artículos</h3>
<link rel="stylesheet" href="../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<script src="~/Scripts/jquery-3.3.1.js"></script>
<p>
    <a href="/" class="btn btn-outline-primary btn-sm"><i class="fas fa-undo-alt fa-1x"></i> Regresar</a> |
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th id="Articulo">
                @Html.DisplayNameFor(model => model.ARTICULO1)
            </th>
            <th id="Categoria">
                @Html.DisplayNameFor(model => model.CATEGORIAARTICULO)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ARTICULO1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORIAARTICULO)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.SECUENCIAL })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('#Articulo').text('Art\u00EDculo');
    $('#Categoria').text('Categor\u00EDa')
</script>