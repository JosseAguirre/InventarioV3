@model ModuloInventario.ViewModels.IndexViewModel


@{
    ViewBag.Title = "Index";
}

@{
    ViewBag.Title = "Index";
}

<br />
<h3>Asignación de Computadores</h3>
<link rel="stylesheet" href="../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<p>
    <a href="/Home/SeleccionAsignacion" class="btn btn-outline-primary btn-sm"><i class="fas fa-undo-alt fa-1x"></i> Regresar</a> |
    @Html.ActionLink("Asignar", "Create")
</p>

<div class="form-group">
    @using (Html.BeginForm("Index", "AsignacionComputadores", FormMethod.Get))
    {
        <p>
            <div class="input-group-prepend">
                <button type="submit" class="btn btn-outline-info"><i class="fas fa-search fa-1x">  Consultar:</i></button>@Html.TextBox("SearchString", null, new { @class = "form-control" })
            </div>
        </p>
    }
</div>

<table class="table  table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Código_Interno
            </th>
            <th>
                Responsable
            </th>
            <th>
                Ubicación
            </th>
            <th>
                Fecha_Asignacion
            </th>
            <th>
                Fecha_Entrega
            </th>
            <th>
                Estado
            </th>
            <th>
                Observaciones
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.asignacionComputador)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.INGRESOCOMPUTADORES.CODIGOINTERNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PERSONA.NOMBREUNIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEDE.DESCRIPCION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHAASIGNACION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHAENTREGA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ESTADOENTREGA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OBSERVACIONES)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.SECUENCIAL })
                </td>
            </tr>
        }
    </tbody>
</table>

@{Html.RenderPartial("_paginador", Model);}